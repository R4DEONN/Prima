{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "ESNext",
    "rootDir": "./src",
    "esModuleInterop": true,
    "outDir": "./build"
  },
  "include": [
	"src/**/*"
  ],
  "exclude": ["node_modules"]
}